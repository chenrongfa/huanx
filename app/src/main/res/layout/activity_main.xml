<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chen.yy.com.huanxin.ui.MainActivity">





    <FrameLayout
        android:layout_weight="1"
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_all"
        android:background="@color/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_comment"
            android:button="@null"
            android:textColor="@drawable/selector_blacktow"
            android:text="@string/conversion"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_conversion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_book"
            android:button="@null"
            android:textColor="@drawable/selector_blacktow"
            android:text="@string/book"
            android:gravity="center"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rb_settings"
            android:button="@null"
            android:textColor="@drawable/selector_blacktow"
            android:text="@string/setting"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</LinearLayout>
