<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_invocation"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:text="@string/invocation"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_marginBottom="8dp"

        android:drawableLeft="@drawable/em_new_friends_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_redcircle"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@android:drawable/ic_notification_overlay"
            android:layout_width="8dp"
            android:layout_height="8dp"/>
    </LinearLayout>
    <include layout="@layout/linear"></include>


    <TextView
        android:id="@+id/tv_group"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:text="@string/group"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/em_create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>